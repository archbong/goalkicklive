// Generate Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Database configuration (adjust provider to your DB)
datasource db {
  provider = "postgresql" // or "mysql" | "sqlite" | "mongodb"
  url      = env("DATABASE_URL")
}

model Team {
  id         Int     @id @default(autoincrement())
  name       String
  slug       String  @unique
  country    String?
  sourceRef  String?

  homeGames  Match[] @relation("HomeTeam")
  awayGames  Match[] @relation("AwayTeam")

  @@index([country])
}

model Match {
  id            Int      @id @default(autoincrement())
  extId         String?  @unique
  homeTeamId    Int
  awayTeamId    Int
  competitionId Int
  matchDate     DateTime
  title         String?
  status        String   @default("FINISHED")

  homeTeam      Team       @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam      Team       @relation("AwayTeam", fields: [awayTeamId], references: [id])
  competition   Competition @relation(fields: [competitionId], references: [id])
  videos        Video[]

  @@unique([homeTeamId, awayTeamId, matchDate])
  @@index([matchDate])
  @@index([competitionId])
}

model Video {
  id          Int      @id @default(autoincrement())
  matchId     Int
  title       String
  thumbnailUrl String?
  embedHtml   String
  sourceUrl   String
  provider    String?
  publishedAt DateTime
  fetchedAt   DateTime @default(now())
  isActive    Boolean  @default(true)
  checksum    Bytes?

  match       Match    @relation(fields: [matchId], references: [id])

  @@index([publishedAt])
}

model Competition {
  id       Int      @id @default(autoincrement())
  name     String
  slug     String   @unique
  country  String?
  matches  Match[]

  // Example: enforcing unique competitions by name+country
  @@unique([name, country])
}

model WebVitalMetric {
  id             Int      @id @default(autoincrement())
  name           String   // CLS, FID, LCP, FCP, TTFB, INP
  value          Float    // The metric value
  rating         String   // "good", "needs-improvement", "poor"
  metricId       String   // Unique ID for the metric instance
  page           String   // Page URL where metric was captured
  timestamp      DateTime // When the metric was captured
  userAgent      String?  // User agent string
  connectionType String?  // Network connection type
  referrer       String?  // Referrer URL
  language       String?  // Accept-Language header

  @@index([name])
  @@index([rating])
  @@index([timestamp])
  @@index([page])
}
